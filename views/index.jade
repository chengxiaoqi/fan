html
    head
        // if IE
            meta(http-equiv="refresh", content="0; url=/noIe" )
        title 饭
        link(rel="stylesheet/less", type="text/css", href="/stylesheets/style.less")
        script(src="/javascripts/less-1.3.3.min.js", type="text/javascript")
        script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js", type="text/javascript")
    body
        div#content
            div#main
                // 个人信息
                p
                    lebel 我是：
                        input(type="text", name="user", value="")
                h1 我想吃：
                    // 确定按钮
                    a#fan-submit.btn(href="javascript:void(0);") 我选好了
                // 米饭和馒头
                div.fn-clearfix
                    div.rice.fn-fl
                        a.rice-add-button.btn(href="javascript:void(0);") 米 ╋
                        a.rice-reduce-button.btn(href="javascript:void(0);") 米 ━
                        span.rice-container
                            img.rice-img(src="/images/rice.png")
                    div.bred.fn-fl
                        a.bred-add-button.btn(href="javascript:void(0);") 馒 ╋
                        a.bred-reduce-button.btn(href="javascript:void(0);") 馒 ━
                        span.bred-container
                            img.bred-img(src="/images/bred.png")

                // 菜谱
                div.dish
                    ul.fn-clearfix
                        - for (var i=0; i<dishs.length; i++)
                            li.dish-item
                                div.dish-photo
                                    // todo 属性里绑定数据的写法？
                                    img(src="= dishs[i].photoUrl")
                                div.dish-info.fn-hide
                                    p.dish-name= dishs[i].name
                                    p.dish-price ￥
                                        // todo 嵌入js脚本，toFixed(2)
                                        = dishs[i].price
                                        |元

            // 侧边栏
            div#side
                h1 大家想吃：
                div
                    p
                        | 米饭：
                        span#RiceTotalCount 10
                        | 碗
                    p
                        | 馒头：
                        span#RiceTotalCount 10
                        | 个
                ol
                    li 水煮鱼
                        span.dishRank 5
                    li 雷公菌炒鸡蛋
                        span.dishRank 4
                    li 水煮鱼
                        span.dishRank 3
                    li 水煮鱼
                        span.dishRank 2
                    li 水煮鱼
                        span.dishRank 1

        script(src="/javascripts/index.js", type="text/javascript")
        script(src="/javascripts/elfDialog.js", type="text/javascript")